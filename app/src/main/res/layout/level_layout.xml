                    android:layout_below="@id/level_txt4"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"/>


            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <View
                android:id="@+id/view5"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_centerInParent="true"/>
            <RelativeLayout
                android:id="@+id/level_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/view5"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="5dp"
                >

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/level1"/>

                <TextView
                    android:id="@+id/level_txt5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="-10dp"
                    android:fontFamily="@font/bevan"
                    android:text="6"
                    android:textColor="#FFEB3B"
                    android:textSize="25sp"
                    android:textStyle="bold" />
                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/star_layout_6"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/level_txt5"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="15dp">
                    <ImageView
                        android:id="@+id/level6_stars1"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/star1_not_fill"
                        android:layout_gravity="bottom"/>
                    <ImageView
                        android:id="@+id/level6_stars2"
                        android:layout_width="25dp"
