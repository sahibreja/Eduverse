<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.start.Intro.IntroVideoActivity">


    <SurfaceView
        android:id="@+id/video_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true" />

    <FrameLayout
        android:visibility="gone"
        android:id="@+id/frame_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/pre_req_fragment_bg">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/topLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <ProgressBar
                        android:id="@+id/progressBar"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:padding="10dp"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:progressDrawable="@drawable/custom_progress_bg"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                </RelativeLayout>

            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/topLayout"
                android:layout_above="@id/nextBtn">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/topLayout"
                    android:layout_above="@id/nextBtn">

                    <RelativeLayout
                        android:id="@+id/question_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="40dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:padding="5dp"
                        >

                        <TextView
                            android:id="@+id/question_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginBottom="5dp"
                            android:text="If A is matrix of order mxn and B is matrix such that AB' and B'A are both defined. then order of matrix B is"
                            android:textAlignment="textStart"
                            android:textColor="@color/white"
                            android:textSize="20sp" />
                    </RelativeLayout>

                    <ScrollView
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_below="@id/question_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingBottom="20dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="30dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:weightSum="2"
                                    android:minHeight="50dp"
                                    android:gravity="center"
                                    >

                                    <TextView
                                        android:id="@+id/option_1_txt"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:minHeight="48dp"
                                        android:padding="7dp"
                                        android:layout_marginRight="20dp"
                                        android:background="@drawable/pre_req_que_opt_bg"
                                        android:text="Option 1"
                                        android:textColor="@color/white" />

                                    <TextView
                                        android:id="@+id/option_2_txt"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="20dp"
                                        android:gravity="center"
                                        android:minHeight="48dp"
                                        android:padding="7dp"
                                        android:background="@drawable/pre_req_que_opt_bg"
                                        android:layout_weight="1"
                                        android:text="Option 2"
                                        android:textColor="@color/white"
                                        />


                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="20dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:weightSum="2"
                                    android:minHeight="50dp"
                                    android:gravity="center"
                                    >
                                    <TextView
                                        android:id="@+id/option_3_txt"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:minHeight="48dp"
                                        android:padding="7dp"
                                        android:layout_marginRight="20dp"
                                        android:background="@drawable/pre_req_que_opt_bg"
                                        android:text="Option 3"
                                        android:textColor="@color/white" />


                                    <TextView
                                        android:id="@+id/option_4_txt"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="20dp"
                                        android:gravity="center"
                                        android:minHeight="48dp"
                                        android:padding="7dp"
                                        android:background="@drawable/pre_req_que_opt_bg"
                                        android:layout_weight="1"
                                        android:text="Option 4"
                                        android:textColor="@color/white"
                                        tools:ignore="UsingOnClickInXml" />

                                </LinearLayout>

                            </LinearLayout>
                        </LinearLayout>


                    </ScrollView>

                </RelativeLayout>

            </ScrollView>




            <android.widget.Button
                android:id="@+id/nextBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="Next"
                android:textAllCaps="false"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:visibility="gone"
                android:background="@drawable/pre_req_button_shape"
                tools:ignore="UsingOnClickInXml" />


        </RelativeLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/popup_layout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="3">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    app:cardCornerRadius="30dp"
                    android:layout_marginTop="70dp"
                    android:layout_marginBottom="70dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Let's check \nif you have enough knowledge \for\nDiving into the\nEduverse"
                            android:textAlignment="center"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="20dp"
                            android:textSize="22sp"
                            android:fontFamily="@font/aclonica"
                            android:textColor="@color/black"/>
                        <android.widget.Button
                            android:id="@+id/goBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:text="Go"
                            android:textAllCaps="false"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginRight="20dp"
                            android:layout_marginBottom="15dp"
                            android:visibility="visible"
                            android:fontFamily="@font/abril_fatface"
                            android:background="@drawable/pre_req_button_shape"
                            />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

            </RelativeLayout>

        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/positive_layout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="3">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    app:cardCornerRadius="30dp"
                    android:layout_marginTop="70dp"
                    android:layout_marginBottom="70dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <com.airbnb.lottie.LottieAnimationView
                            android:id="@+id/animation_view"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_above="@id/exc"
                            android:layout_centerInParent="true"
                            app:lottie_autoPlay="true"
                            app:lottie_loop="true"
                            app:lottie_rawRes="@raw/thumbs_up"/>

                        <TextView
                            android:id="@+id/exc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@id/desc"
                            android:layout_centerHorizontal="true"
                            android:text="Excellent"
                            android:textStyle="bold"
                            android:textColor="#07CA0F"
                            android:textSize="18sp"
                            android:textAllCaps="true"
                            android:fontFamily="@font/abril_fatface"
                            android:layout_marginBottom="5dp"
                            />

                        <TextView
                            android:id="@+id/desc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@id/ps_ok_btn"
                            android:layout_centerHorizontal="true"
                            android:text="Let's Dive into EduVerse"
                            android:textColor="@color/black"
                            android:layout_marginBottom="5dp"
                            />

                        <android.widget.Button
                            android:id="@+id/ps_ok_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:text="OK"
                            android:textAllCaps="false"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginRight="20dp"
                            android:layout_marginBottom="15dp"
                            android:visibility="visible"
                            android:background="@drawable/pre_req_button_shape"
                            />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

            </RelativeLayout>

        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/negative_layout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="3">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    app:cardCornerRadius="30dp"
                    android:layout_marginTop="70dp"
                    android:layout_marginBottom="70dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <com.airbnb.lottie.LottieAnimationView
                            android:layout_marginTop="5dp"
                            android:id="@+id/animation_view1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_above="@id/exc1"
                            android:layout_centerInParent="true"
                            app:lottie_autoPlay="true"
                            app:lottie_loop="true"
                            app:lottie_rawRes="@raw/no"/>

                        <TextView
                            android:id="@+id/exc1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@id/desc1"
                            android:layout_centerHorizontal="true"
                            android:text="Learn Again"
                            android:textStyle="bold"
                            android:textColor="#EF2416"
                            android:textSize="18sp"
                            android:textAllCaps="true"
                            android:fontFamily="@font/abril_fatface"
                            android:layout_marginBottom="5dp"
                            />

                        <TextView
                            android:id="@+id/desc1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@id/ps_no_btn"
                            android:layout_centerHorizontal="true"
                            android:text="Check i icon on dashboard"
                            android:textColor="@color/black"
                            android:layout_marginBottom="5dp"
                            />

                        <android.widget.Button
                            android:id="@+id/ps_no_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:text="OK"
                            android:textAllCaps="false"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginRight="20dp"
                            android:layout_marginBottom="15dp"
                            android:visibility="visible"
                            android:background="@drawable/pre_req_button_shape"
                            />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

            </RelativeLayout>

        </LinearLayout>
    </FrameLayout>

    <VideoView
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:id="@+id/vide_view1"
        android:scaleX="1.3"/>




</RelativeLayout>