<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:orientation="horizontal"
            android:contentDescription="@string/appbar_scrolling_view_behavior">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="start"
                android:gravity="start"
                >
                <RelativeLayout
                    android:id="@+id/layout1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:scaleType="fitEnd"
                        android:src="@drawable/bg_dashboard" />

                    <View
                        android:id="@+id/view"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_centerInParent="true"/>

                    <RelativeLayout
                           android:id="@+id/level_1"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_below="@id/view"
                           android:layout_marginStart="60dp"
                           android:layout_marginTop="25dp"
                           >

                           <ImageView
                               android:layout_width="70dp"
                               android:layout_height="wrap_content"
                               android:src="@drawable/level1"/>


                       </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/level_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@id/view"
                        android:layout_toEndOf="@id/level_1"
                        android:layout_marginStart="40dp"
                        android:layout_marginBottom="35dp"
                        >

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/level1"/>


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/level_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/level_2"
                        android:layout_toEndOf="@id/level_2"
                        android:layout_marginStart="40dp"
                        android:layout_marginTop="25dp"
                        >

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/level1"/>


                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/level_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@id/view"
                        android:layout_toEndOf="@id/level_3"
                        android:layout_marginStart="40dp"
                        android:layout_marginBottom="35dp"
                        >

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/level1"/>


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/level_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/level_2"
                        android:layout_toEndOf="@id/level_4"
                        android:layout_marginStart="40dp"
                        android:layout_marginTop="25dp"
                        >

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/level1"/>


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/level_6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@id/view"
                        android:layout_alignParentEnd="true"
                        android:layout_marginBottom="35dp"
                        >

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/level1"/>


                    </RelativeLayout>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/bg_dashboard2"
                        android:adjustViewBounds="true" />

                    <View
                        android:id="@+id/view_1"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_centerInParent="true"/>

                    <RelativeLayout
                        android:id="@+id/level_7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/view_1"
                        android:layout_marginStart="40dp"
                        android:layout_marginTop="25dp"
                        >

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/level1"/>


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/level_8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@id/view_1"
                        android:layout_toEndOf="@id/level_7"
                        android:layout_marginStart="40dp"
                        android:layout_marginBottom="35dp"
                        >

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/level1"/>


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/level_9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/level_8"
                        android:layout_toEndOf="@id/level_8"
                        android:layout_marginStart="40dp"
                        android:layout_marginTop="25dp"
                        >

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/level1"/>


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/level_10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@id/view_1"
                        android:layout_toEndOf="@id/level_9"
                        android:layout_marginStart="40dp"
                        android:layout_marginBottom="35dp"
                        >

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/level1"/>


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/level_11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/level_8"
                        android:layout_toEndOf="@id/level_10"
                        android:layout_marginStart="40dp"
                        android:layout_marginTop="25dp"
                        >

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/level1"/>


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/level_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@id/view_1"
                        android:layout_alignParentEnd="true"
                        android:layout_marginBottom="35dp"
                        >

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/level1"/>


                    </RelativeLayout>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/bg_dashboard"
                        android:adjustViewBounds="true"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/bg_dashboard2"
                        android:adjustViewBounds="true"/>
                </RelativeLayout>

            </LinearLayout>


        </HorizontalScrollView>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/profile_image_bg"
            />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/avatar"
            android:layout_marginTop="19dp"
            android:layout_marginStart="15dp"/>




        <ImageView
            android:id="@+id/home_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="15dp"
            android:layout_marginStart="10dp"
            android:layout_alignParentBottom="true"
            android:src="@drawable/home_btn_bg"
            />

        <ImageView
            android:id="@+id/setting_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/setting_btn_bg"
            />

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="15dp"
            android:layout_marginEnd="10dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/exitb_btn_bg"
            />

    </RelativeLayout>



</RelativeLayout>